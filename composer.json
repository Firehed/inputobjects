{
    "name": "firehed/inputobjects",
    "description": "A collection of InputObjects to be used with firehed/input",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Firehed\\InputObjects\\": ["src/", "tests/"]
        }
    },
    "authors": [
        {
            "name": "Eric Stern",
            "email": "eric@ericstern.com"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "firehed/input": "^2.1",
        "php": ">=7",
        "moneyphp/money": "^3.0"
    },
    "require-dev": {
        "firehed/arctools": "^1.0",
        "php-coveralls/php-coveralls": "^2.0",
        "phpstan/phpstan": "^0.9.0",
        "phpstan/phpstan-phpunit": "^0.9.4",
        "phpunit/phpunit": "^6 | ^7",
        "squizlabs/php_codesniffer": "^3.1"
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@phpstan",
            "@phpcs"
        ],
        "autofix": "phpcbf src tests",
        "phpunit": "phpunit",
        "phpstan": "phpstan analyse --no-progress -c phpstan.neon -l7 src tests",
        "phpcs": "phpcs src tests"
    }
}
