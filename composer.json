{
    "name": "firehed/inputobjects",
    "description": "A collection of InputObjects to be used with firehed/input",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Firehed\\InputObjects\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Firehed\\InputObjects\\": "tests"
        }
    },
    "authors": [
        {
            "name": "Eric Stern",
            "email": "eric@ericstern.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "firehed/input": "^2.1",
        "moneyphp/money": "^3.0 || ^4.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-strict-rules": "^0.12.10",
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "^3.1"
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@phpstan",
            "@phpcs"
        ],
        "autofix": "phpcbf",
        "phpunit": "phpunit",
        "phpstan": "phpstan analyse",
        "phpcs": "phpcs"
    },
    "config": {
        "sort-packages": true
    }
}
